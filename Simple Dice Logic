fun main() {
    val myFirstDice = Dice() //calling the class
    println(myFirstDice.sides) //printing number of sides in dices
    myFirstDice.roll() //calling function in Dice class
}
class Dice{
    var sides = 6
    fun roll(){
        val randomNumber = (1..6).random()
        println(randomNumber)
    }
}
